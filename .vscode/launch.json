    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug wasm key",
            "preLaunchTask": "BuildCompiler",
            "program": "${workspaceFolder}/inference/target/debug/compiler",
            "args": [
                "${workspaceFolder}/test_data/wasm/",
                "--wasm"
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug rust key",
            "preLaunchTask": "BuildCompiler",
            "program": "${workspaceFolder}/inference/target/debug/compiler",
            "args": [
                "${workspaceFolder}/test_data/rust/lib.rs",
                "--rust"
            ],
            "cwd": "${workspaceFolder}",
        }
    ]
}