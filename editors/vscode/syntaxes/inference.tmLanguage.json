{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Inference",
  "scopeName": "source.inference",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.inference",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.inference",
          "match": "//.*$"
        },
        {
          "name": "comment.block.inference",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.inference" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.inference",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.inference" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.inference" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.inference",
              "match": "\\\\(?:[nrt\\\\\"0]|x[0-9a-fA-F]{2}|u\\{[0-9a-fA-F]+\\})"
            }
          ]
        },
        {
          "name": "string.quoted.single.inference",
          "match": "'[^'\\\\]'"
        },
        {
          "name": "string.quoted.single.inference",
          "match": "'\\\\(?:[nrt\\\\\"0]|x[0-9a-fA-F]{2}|u\\{[0-9a-fA-F]+\\})'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.inference",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.inference",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.inference",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.decimal.inference",
          "match": "\\b[0-9][0-9_]*(?:\\.[0-9][0-9_]*)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.nondet.forall.inference",
          "match": "\\bforall\\b"
        },
        {
          "name": "keyword.control.nondet.exists.inference",
          "match": "\\bexists\\b"
        },
        {
          "name": "keyword.control.nondet.assume.inference",
          "match": "\\bassume\\b"
        },
        {
          "name": "keyword.control.nondet.unique.inference",
          "match": "\\bunique\\b"
        },
        {
          "name": "keyword.control.nondet.uzumaki.inference",
          "match": "@"
        },
        {
          "name": "keyword.declaration.fn.inference",
          "match": "\\bfn\\b"
        },
        {
          "name": "keyword.declaration.struct.inference",
          "match": "\\bstruct\\b"
        },
        {
          "name": "keyword.declaration.enum.inference",
          "match": "\\benum\\b"
        },
        {
          "name": "keyword.declaration.type.inference",
          "match": "\\btype\\b"
        },
        {
          "name": "keyword.declaration.const.inference",
          "match": "\\bconst\\b"
        },
        {
          "name": "keyword.declaration.let.inference",
          "match": "\\blet\\b"
        },
        {
          "name": "keyword.declaration.external.inference",
          "match": "\\bexternal\\b"
        },
        {
          "name": "keyword.declaration.spec.inference",
          "match": "\\bspec\\b"
        },
        {
          "name": "keyword.control.if.inference",
          "match": "\\bif\\b"
        },
        {
          "name": "keyword.control.else.inference",
          "match": "\\belse\\b"
        },
        {
          "name": "keyword.control.loop.inference",
          "match": "\\bloop\\b"
        },
        {
          "name": "keyword.control.return.inference",
          "match": "\\breturn\\b"
        },
        {
          "name": "keyword.control.break.inference",
          "match": "\\bbreak\\b"
        },
        {
          "name": "keyword.control.assert.inference",
          "match": "\\bassert\\b"
        },
        {
          "name": "keyword.control.use.inference",
          "match": "\\buse\\b"
        },
        {
          "name": "keyword.control.from.inference",
          "match": "\\bfrom\\b"
        },
        {
          "name": "keyword.other.visibility.inference",
          "match": "\\bpub\\b"
        },
        {
          "name": "storage.modifier.mut.inference",
          "match": "\\bmut\\b"
        },
        {
          "name": "variable.language.self.inference",
          "match": "\\bself\\b"
        },
        {
          "name": "constant.language.boolean.true.inference",
          "match": "\\btrue\\b"
        },
        {
          "name": "constant.language.boolean.false.inference",
          "match": "\\bfalse\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.inference",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|bool)\\b"
        },
        {
          "name": "storage.type.unit.inference",
          "match": "\\(\\)"
        },
        {
          "name": "entity.name.type.inference",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "match": "\\b([a-z_][a-zA-Z0-9_]*'?)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.inference" }
          }
        },
        {
          "match": "\\bfn\\s+([a-z_][a-zA-Z0-9_]*'?)\\b",
          "captures": {
            "1": { "name": "entity.name.function.definition.inference" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.inference",
          "match": "\\+|\\-|\\*|\\/|%|\\*\\*"
        },
        {
          "name": "keyword.operator.comparison.inference",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.inference",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.bitwise.inference",
          "match": "&|\\||\\^|~|<<|>>"
        },
        {
          "name": "keyword.operator.assignment.inference",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.inference",
          "match": "->"
        },
        {
          "name": "keyword.operator.path.inference",
          "match": "::"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.inference",
          "match": ","
        },
        {
          "name": "punctuation.terminator.inference",
          "match": ";"
        },
        {
          "name": "punctuation.accessor.inference",
          "match": "\\."
        },
        {
          "name": "punctuation.type.inference",
          "match": ":"
        }
      ]
    }
  }
}
